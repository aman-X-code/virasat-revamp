# Cloudinary Configuration
# Get these values from your Cloudinary dashboard: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=your_api_key_here
CLOUDINARY_API_SECRET=your_api_secret_here

# Environment folder for Cloudinary uploads (dev/prod)
CLOUDINARY_FOLDER=prod

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# PayU Biz Configuration (PRODUCTION/LIVE MODE)
# Get these from your PayU Biz dashboard - LIVE credentials
PAYUBIZ_MERCHANT_KEY=your_live_merchant_key_from_payu
PAYUBIZ_MERCHANT_SALT=your_live_merchant_salt_from_payu

# Application URL (CRITICAL: Must be your actual domain in production)
NEXT_PUBLIC_APP_URL=https://yourdomain.com


# Email Configuration
# For Gmail (demo/testing)
EMAIL_SERVICE=gmail
EMAIL_USER=your_gmail
EMAIL_APP_PASSWORD=16_character_pass_from_gmail

# For Custom SMTP (name.com or other providers)
# EMAIL_SERVICE=smtp
# EMAIL_HOST=mail.reachvirasat.org
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=noreply@reachvirasat.org
# EMAIL_PASSWORD=your_email_password
# ADMIN_EMAIL=admin@reachvirasat.org